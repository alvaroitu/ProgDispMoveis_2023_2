<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="10dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="62dp">
        <EditText
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/numero1" android:hint="numero 1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/numero2" android:layout_weight="1" android:hint="numero 2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/botaoSoma" android:layout_weight="1"/>
        <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/botaoSub" android:layout_weight="1"/>
        <Button
                android:text="X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/botaoMulti" android:layout_weight="1"/>
        <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/botaoDiv" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Resultado"
            android:layout_width="match_parent"
            android:layout_height="77dp" android:id="@+id/resultado" android:gravity="center" android:textSize="20sp"/>
</LinearLayout>