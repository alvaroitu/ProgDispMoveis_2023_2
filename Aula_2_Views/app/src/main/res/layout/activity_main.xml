<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Mudar texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoMudar"
            tools:layout_editor_absoluteX="113dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"/>
    <TextView
            android:text="Primeiro App"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/textViewPrimeiroApp"
            tools:layout_editor_absoluteX="132dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/botaoMudar" android:gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextEntrada"
            tools:layout_editor_absoluteX="40dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewPrimeiroApp" android:hint="Digite aqui!!!!"
            android:gravity="center"/>
    <TextView
            android:text="Resultado"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/textViewResultado"
            tools:layout_editor_absoluteX="-16dp" android:gravity="center"
            android:layout_marginTop="29dp" app:layout_constraintTop_toBottomOf="@+id/editTextEntrada"/>
</androidx.constraintlayout.widget.ConstraintLayout>