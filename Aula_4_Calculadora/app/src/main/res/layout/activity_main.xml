<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="10dp">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/numero1" android:gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/numero2" android:gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp">
        <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/soma" android:layout_weight="1"/>
        <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/sub" android:layout_weight="1"/>
        <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/multi" android:layout_weight="1"/>
        <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/div" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Resultado"
            android:layout_width="match_parent"
            android:layout_height="77dp" android:id="@+id/resultado" android:gravity="center"/>
</LinearLayout>